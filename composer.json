{
    "name": "josecanhelp/stacks-php",
    "description": "A PHP wrapper for the Stacks Blockchain API.",
    "keywords": [
        "blockchain",
        "php",
        "stacks",
        "stacks-php"
    ],
    "homepage": "https://github.com/josecanhelp/stacks-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Soto",
            "email": "josecanhelp@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Stacks\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stacks\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
